@{ ViewData["Title"] = "Registrarse"; }
<div class="container">
    <div class="row vertical-offset-100">
        <div class="col-xs-12 col-sm-8 col-md-4 col-sm-offset-2 col-md-offset-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h3 class="panel-title"><strong>Registrarse  </strong><small>Gestiona tus proyectos!</small></h3>
                </div>
                <div class="panel-body">
                    <form role="form" accept-charset="UTF-8" role="form" class="form-signin" 
                                        asp-action="Registro" asp-controller="MisProyectos"
                                        method="POST">
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="rut" class="form-control input-sm" 
                                    placeholder="RUT (ej: 185181677)" required maxlength="9">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="nombre" class="form-control input-sm" 
                                    placeholder="Nombre" required>
                                </div>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="email" name="email" id="email" class="form-control input-sm" 
                            placeholder="Email" required>
                        </div>
                        
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="paterno" class="form-control input-sm" 
                                    placeholder="Apellido Paterno" required>
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="text" name="materno" class="form-control input-sm" 
                                    placeholder="Apellido Materno" required>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="Contraseña" class="form-control input-sm" 
                                    placeholder="Password" required maxlength="10">
                                </div>
                            </div>
                            <div class="col-xs-6 col-sm-6 col-md-6">
                                <div class="form-group">
                                    <input type="password" name="confirmarContraseña" 
                                    class="form-control input-sm" placeholder="Confirmar Contraseña" required
                                    maxlength="10">
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <label><input type="checkbox" name="admin">  Administrador</label>
                        </div>

                        <input type="submit" value="Registrarme!" class="btn btn-lg btn-info btn-block">

                    </form>
                </div>
            </div>
        </div>
    </div>
</div>